.product-middle {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.middle {
  text-align: center;
  width: 20%;
}
.select-city {
  /* height: 80upx; */
  margin-top: 25rpx;
  white-space: nowrap;
}
.select-city view {
  text-align: center;
  width: 130rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.5);
}
.hostcity_name {
  /* box-shadow: 10 10 1 100upx #000000; */
  border-radius: 10rpx;
  border: 2rpx solid #888888;
  color: #000000;
  font-size: 30rpx;
  font-weight: bold;
  /* background: #007AFF; */
  margin: 20rpx;
}
.hostcity_name_selected {
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  border: 2rpx solid #888888;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: bold;
  background: #007AFF;
  margin: 20rpx;
}
.swiper {
  width: 700rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 16rpx;
  position: relative;
  margin-left: 26rpx;
}
.swiper .swiper-item {
    width: 700rpx;
    height: 300rpx;
    border-radius: 16rpx;
}
.dots {
  position: absolute;
  top: 560rpx;
  left: 8%;
  -webkit-transform: translate(-50% 0);
          transform: translate(-50% 0);
  z-index: 4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.dots .dot {
    width: 30rpx;
    height: 8rpx;
    -webkit-transition: all .6s;
    transition: all .6s;
    background: rgba(0, 0, 0, 0.3);
    margin-right: 10rpx;
}
.dots .active {
    width: 34rpx;
    height: 8rpx;
    background: rgba(255, 255, 255, 0.8);
}
.hostcity_wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-animation: hide 1s ease;
          animation: hide 1s ease;
}
.wrap {
  display: inline-block;
  width: 40%;
  margin-top: 30rpx;
}
.hostcity_product {
  width: 100%;
}
.star {
  color: #DD524D;
}
.nostar {
  color: #808080;
}
@-webkit-keyframes hide {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}
@keyframes hide {
0% {
    opacity: 0;
}
100% {
    opacity: 1;
}
}

